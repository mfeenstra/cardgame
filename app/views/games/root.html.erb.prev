<html lang="en">
<% console %>
  <head>
    <meta charset="utf-8">
    <title>The Deck</title>
  </head>

  <body>
    <h2>Your Hand:</h2>

    <% if session[:game_id].blank? then %>
      <h2>Your game was not found.</h2>
      <p>---</p>
      <%= raw session.inspect %>
      <p>---</p>
      <%= link_to 'New', new_game_path %>

    <% else %>

      <% unless session[:game_id].blank? then %>
        <% @game = Game.find(session[:game_id]) %>
        <table>
          <tr>
            <!-- <th>Suit</th> -->
            <th>Hearts</th>
            <th>Clubs</th>
            <th>Diamonds</th>
            <th>Spades</th>
          </tr>
          <tr>
          <% 1..13.times do |n| %>
            <!-- <td><%#= @game.suit(n) %></td> -->
            <td><%= @game.grid['hearts'][n] %></td>
            <td><%= @game.grid['clubs'][n] %></td>
            <td><%= @game.grid['diamonds'][n] %></td>
            <td><%= @game.grid['spades'][n] %></td>
          <% end %>
          </tr>
          <%= button_to 'Draw', draw_button_path %>
          <%= button_to 'Shuffle', shuffle_button_path %>
          <%= button_to 'Show', show_button_path %>
        </table>
      <% else %>
        <h2>Unknown issue</h2>
      <% end %>
    <% end %>

  </body>

</html>
